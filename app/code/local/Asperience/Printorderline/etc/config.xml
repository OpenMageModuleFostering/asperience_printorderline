<config>
    <modules>
        <Asperience_Printorderline>
            <version>0.1.1</version>
        </Asperience_Printorderline>
    </modules>

    <global>
        <blocks>
	    	<adminhtml>
	    		<rewrite>
	    			<sales_order_grid>Asperience_Printorderline_Block_Sales_Order_Grid</sales_order_grid>
	    		</rewrite>
	    	</adminhtml>
    	</blocks>
        <rewrite>
            <asperience_printorderline_order>
                <from><![CDATA[#/\w+/sales_order/pdforders/#]]></from>
                <to>/printorderline/order/pdforders/</to>
            </asperience_printorderline_order>
        </rewrite>
        <models>
            <Asperience_Printorderline>
                <class>Asperience_Printorderline_Model</class>
            </Asperience_Printorderline>
        </models>
        <pdf>
        	<order>
        	</order>
        </pdf>
        <helpers>
            <printorderline>
                <class>Asperience_Printorderline_Helper</class>
            </printorderline>
        </helpers>
    </global>
	<admin>
        <routers>
            <Asperience_Printorderline>
                 <use>admin</use>
                <args>
                    <module>Asperience_Printorderline</module>
                    <frontName>printorderline</frontName>
                </args>
            </Asperience_Printorderline>
        </routers>
    </admin>

	<adminhtml>
		<translate>
            <modules>
                <Asperience_Printorderline>
                    <files>
                        <default>Asperience_Printorderline.csv</default>
                    </files>
                </Asperience_Printorderline>
            </modules>
        </translate>
	</adminhtml> 
</config>
